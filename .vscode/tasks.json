{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "src",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--output",
                "${workspaceFolder}/dev/bin"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "tilt",
            "command": "tilt",
            "type": "shell",
            "args": [
                "up",
                "--hud=false"
            ],
            "group": "build",
            "dependsOn": [
                "build"
            ]
        }
    ]
}